<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.compo.android.app"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="9"
            android:targetSdkVersion="9"/>

    <application
            android:label="@string/app_name"
            android:allowBackup="true"
            android:debuggable="true"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".SelectThemeActivity"
                android:label="@string/activity_select_theme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.MainActivity"/>
        </activity>
        <activity
                android:name=".SelectPackActivity"
                android:label="@string/activity_select_pack">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.MainActivity"/>
        </activity>
        <activity
                android:name=".SettingActivity"
                android:theme="@style/DialogTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.SettingActivity"/>
        </activity>
        <activity
                android:name=".StoreActivity"
                android:theme="@style/DialogTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.MainActivity"/>
        </activity>
        <activity
                android:name=".PackDetailsActivity"
                android:theme="@style/DialogTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.PackDetailsActivity"/>
        </activity>
        <activity
                android:name=".SelectQuizzActivity"
                android:label="@string/activity_select_quizz">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.MainActivity"/>
        </activity>
        <activity
                android:name=".QuizzActivity"
                android:label="@string/activity_quizz">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.MainActivity"/>
        </activity>
        <activity
                android:name=".ResponseActivity"
                android:theme="@style/DialogTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.compo.android.app.ResponseActivity"/>
        </activity>
    </application>

</manifest>