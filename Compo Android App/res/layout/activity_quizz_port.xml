<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/theme1_background">

    <include
            android:id="@+id/score_bar"
            layout="@layout/score_bar"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/score_bar"
            android:background="@drawable/theme1_cadre">

        <com.compo.android.app.QuizzView
                android:id="@+id/quizz_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/team_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="false"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/team_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:textIsSelectable="false"
                android:textSize="20sp"/>
    </RelativeLayout>

</RelativeLayout>