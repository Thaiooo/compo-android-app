<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:gravity="center_horizontal"
    android:padding="@dimen/dialog_padding" >

    <TextView
        android:id="@+id/store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dialog_tittle_margin"
        android:text="@string/title_setting"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/dialog_title_font_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_sound"
        style="@style/blank_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_title"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/sound_on"
        android:onClick="changeSound"
        android:text="@string/button_setting_sound_on"
        android:textSize="@dimen/dialog_button_font_size"
        android:width="@dimen/setting_button_width" />

    <Button
        android:id="@+id/button_reset"
        style="@style/blank_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_sound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dialog_button_spacing"
        android:drawableLeft="@drawable/erase_data"
        android:onClick="eraseData"
        android:text="@string/button_setting_reset"
        android:textSize="@dimen/dialog_button_font_size"
        android:width="@dimen/setting_button_width" />

    <Button
        android:id="@+id/button_cancel"
        style="@style/common_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dialog_button_margin"
        android:onClick="cancel"
        android:text="@string/button_cancel"
        android:textSize="@dimen/dialog_button_font_size"
        android:width="@dimen/setting_button_width" />

</RelativeLayout>