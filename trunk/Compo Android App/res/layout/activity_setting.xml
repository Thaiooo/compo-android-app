<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/setting_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/setting.title"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/setting_title_font_size" />

    <Button
        android:id="@+id/button_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sound"
        android:onClick="changeSound" />

    <Button
        android:id="@+id/button_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_sound"
        android:layout_centerHorizontal="true"
        android:background="@drawable/trash_full"
        android:onClick="eraseData" />

    <Button
        android:id="@+id/button_cancel"
        style="@style/paper_post_it_red_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_trash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="cancel"
        android:text="@string/button_cancel"
        android:textSize="@dimen/main_button_font_size"
        android:textStyle="bold" />

</RelativeLayout>