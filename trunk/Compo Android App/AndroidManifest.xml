<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.compo.android.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.compo.android.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectGameActivity"
            android:label="@string/activity_select_game" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compo.android.app.MainActivity" />
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/activity_setting" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compo.android.app.MainActivity" />
        </activity>
        <activity
            android:name=".SelectQuizzActivity"
            android:label="@string/activity_select_quizz" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compo.android.app.MainActivity" />
        </activity>
        <activity
            android:name=".QuizzActivity"
            android:label="@string/activity_quizz" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compo.android.app.MainActivity" />
        </activity>
    </application>

</manifest>